<%= form_for @project, :html => { :multipart => true } do |f| %>  
  <%= render "shared/error_messages", :target => @project %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :content, "Content" %><br />
    <%= f.text_area :content %>  
  </div>
  <div>
	<%= f.label :screenshot, "Screenshot" %><br />
    <% if @project.screenshot? %>
      <%= image_tag @project.screenshot_url(:small) %><br />
      File has already been uploaded. Replace file?<br />
    <% end %>
    <%= f.file_field :screenshot %>
    <%= f.hidden_field :screenshot_cache %>
  </div>
  <div>
    <%= f.label :website_url, "Website URL" %><br />
    <%= f.text_field :website_url %>
  </div>
  <div>
    <%= f.label :download_url, "Download URL" %><br />
    <%= f.text_field :download_url %>
  </div>
  <div>
    <%= f.label :source_code_url, "Source Code URL" %><br />
    <%= f.text_field :source_code_url %>
  </div>
  <div>
    <%= f.label :priority, "Priority" %><br />
    <%= f.text_field :priority %>
  </div>
  <div>
    <%= f.check_box :publish %> <%= f.label :publish, "Publish?" %>
  </div>
  <div>
    <%= f.submit %>  
  </div>
<% end %>